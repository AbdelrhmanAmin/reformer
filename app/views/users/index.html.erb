<h1>Users</h1>

<% if @users.empty? %>
  <%= link_to 'New', new_user_path(@user) %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New', new_user_path(@user) %>
<% end %>